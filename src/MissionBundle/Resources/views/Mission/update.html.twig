{% extends "::base.html.twig" %}
{% block body%}
    <div class="container" style="margin-top: 30px">
        <div class="row">
            <h2>Page Update</h2>
            <div class="col-md-8">
                <form action="{{ path('mission_mission_page_update', {'missionId': mission.id}) }}" method="get">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="form-group">
                        <input name="serviceDate" type="datetime-local" class="date form-control" REQUIRED
                               value="{{ mission.serviceDate|date('Y-m-dTH:i') }}">
                    </div>
                    <input type="submit" class="btn btn-success">
                    {{ form_end(form) }}
                </form>
            </div>
            <a class="btn" href="{{ path('mission_mission_page_list') }}">Back to Page List</a>
        </div>
    </div>
{% endblock %}